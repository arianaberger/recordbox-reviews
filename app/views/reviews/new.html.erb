<div class="container">
  <h1 class="text-center">Add Record Review</h1>
    <div class="row">
      <div class="col-md-offset-3 col-md-6">
        <div class="form-group">
          <%= form_for ([@record, @review])do |f| %>
            <%= f.label :rating, "Rating 1-5 stars:" %>
            <%= f.number_field :rating, in: 1..5, class: "form-control" %><br>
            <%= f.label :comment, "Comments:"  %>
            <%= f.text_area :comment, maxlength: 150, class: "form-control" %><br>
            <%= f.label :favorite_track, "Favorite Track:" %>
            <%= f.text_field :favorite_track, class: "form-control" %><br>
            <%= f.submit "Review", class: 'btn btn-primary btn-block' %>
          <% end %>
        </div>
      </div>
    </div>
</div>
