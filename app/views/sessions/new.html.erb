<h1>Login Page</h1>

<%= form_for @user, url: '/login' do |f| %>
  <%= f.label :username, "Username:" %>
  <%= f.text_field :username %><br>
  <%= f.label :email, "Email:"  %>
  <%= f.text_field :email %><br>
  <%= f.label :password, "Password:" %>
  <%= f.password_field :password %><br>
  <%= f.submit "Login" %>
<% end %>
