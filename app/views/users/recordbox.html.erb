<h1 class="text-center"><%="#{@user.username.titleize}'s Recordbox"%></h1>

<div class="text-center">
(Count: <%= @records.count %>)
</div>
<br>
<div class="text-center">
<strong>Sort by</strong><br>
  <%= link_to "Rating", user_recordbox_rating_path %> |
  <%= link_to "Newest", user_recordbox_desc_path %> |
  <%= link_to "Oldest", user_recordbox_asc_path %>
</div>

<div class="row">
  <% @records.each do |record| %>
    <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3">
      <h4 class="text-center"> <%= record.title %></h4>
      <h5 class="text-center"> <%= record.artist  %></h5>
      <div class="star-rating text-center" data-score= <%= record.review_avg %> ></div><br>
      <div class="thumbnail">
        <%= link_to image_tag(record.image, style:'width:100%'), record_path(record) %>
      </div>
    </div>
  <% end %>
</div>

<%= render "records/script" %>
