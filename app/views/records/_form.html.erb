<div class="container">
  <div class="row">
    <div class="col-md-offset-3 col-md-6">
      <div class="form-group">
        <%= form_for @record do |f| %>
          <%= f.label :artist %>
          <%= f.text_field :artist, class: "form-control" %><br>
          <%= f.label :title %>
          <%= f.text_field :title, class: "form-control" %><br>
          <%= f.label :label %>
          <%= f.text_field :label, class: "form-control" %><br>
          <%= f.label :format %>
          <%= f.text_field :format, class: "form-control" %><br>
          <%= f.label :cat %>
          <%= f.text_field :cat, class: "form-control" %><br>
          <%= f.label :released %>
          <%= f.date_field :released, class: "form-control" %><br>
          <%= f.label :genre %>
          <%= f.text_field :genre, class: "form-control" %><br>
          <%= f.label :image %>
          <%= f.file_field :image %><br>

          <h3>Tracks</h3>
          <div class="tracks">
            <%= f.fields_for :tracks do |builder| %>
            <%= render 'track_fields', f: builder %>
            <% end %>
          </div>

            <div class="form-actions">
              <%= link_to_add_association 'Add Track', f, :tracks, data: { association_insertion_node: '.tracks', association_insertion_method: :append } %>
              <br></br>
              <%= f.submit class: 'btn btn-primary btn-block' %>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
